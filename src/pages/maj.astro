---
import MainLayout from "../layouts/MainLayout.astro";
import supabase from '../utils/supabaseClient.js';

// Fetch all majors from Supabase
const { data: allMajors, error } = await supabase
  .from('majors')
  .select('slug, title, category');

if (error) {
  console.error('Error fetching majors:', error);
  return new Response("Error fetching majors", { status: 500 });
}

// Split majors into Arts and Science
const artsMajors = allMajors.filter((major) => major.category === "Arts");
const scienceMajors = allMajors.filter((major) => major.category === "Science");
---

<MainLayout>
  <section class="majors-container">
    <h1>Majors Offered</h1>
    <div class="majors-columns">
      <div class="majors-column">
        <h2>Arts</h2>
        <ul class="majors-list">
          {artsMajors.map((major) => (
            <li>
              <a href={`/majors/${major.slug}`}>
                {major.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div class="majors-column">
        <h2>Science</h2>
        <ul class="majors-list">
          {scienceMajors.map((major) => (
            <li>
              <a href={`/majors/${major.slug}`}>
                {major.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <style>
    .majors-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 2rem 1rem;
      text-align: center;
    }

    h1 {
      font-size: 2rem;
      color: #1a1a1a;
      margin-bottom: 2rem;
      font-weight: 600;
    }

    .majors-columns {
      display: flex;
      justify-content: space-between;
      gap: 2rem;
      text-align: left;
    }

    .majors-column {
      flex: 1;
    }

    .majors-column h2 {
      font-size: 1.5rem;
      color: #1a1a1a;
      margin-bottom: 1rem;
      font-weight: 500;
    }

    .majors-list {
      list-style-type: disc;
      padding-left: 1.5rem;
      margin: 0;
    }

    .majors-list li {
      margin-bottom: 0.75rem;
      font-size: 1rem;
      color: #4a4a4a;
    }

    .majors-list li a {
      color: #2c5282;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .majors-list li a:hover {
      color: #2b6cb0;
      text-decoration: underline;
    }
  </style>
</MainLayout>
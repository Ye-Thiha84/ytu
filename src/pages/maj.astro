---
import MainLayout from "../layouts/MainLayout.astro";
import { fetchMajors } from "../lib/fetchMajors";

// Fetch all majors with descriptions
let allMajors = [];
let error = null;

try {
  allMajors = await fetchMajors();
} catch (err) {
  console.error('Error fetching majors:', err);
  error = "Failed to load majors. Please try again later.";
}

// Split into categories
const scienceMajors = allMajors.filter((major) => major.category === "science");
const artMajors = allMajors.filter((major) => major.category === "art");
const uncategorizedMajors = allMajors.filter((major) => !major.category || !['science', 'art'].includes(major.category));

const totalMajors = allMajors.length;
const totalScience = scienceMajors.length;
const totalArt = artMajors.length;
const totalUncategorized = uncategorizedMajors.length;
---

<MainLayout>
  <section class="majors-container">
    <h1 class="main-title">Majors at YU</h1>

    {/* Display error if fetching fails */}
    {error ? (
      <p class="summary text-red-500">{error}</p>
    ) : (
      <>
        <p class="summary">
          YU offers a total of <strong>{totalMajors}</strong> majors:
          <strong>{totalScience}</strong> from Science,
          <strong>{totalArt}</strong> from Art .
        </p>

        {/* Flex container for Science and Art majors */}
        <div class="categories-wrapper">
          <div class="category-section">
            <h2 class="category-title">Science Majors</h2>
            {scienceMajors.length > 0 ? (
              <ul class="major-list">
                {scienceMajors.map((major) => (
                  <li class="major-item">
                    <a href={`/majors/${major.slug}`} class="card-link">
                      <div class="card">
                        <div class="major-content">
                          <span class="major-slug">{major.slug.charAt(0).toUpperCase() + major.slug.slice(1).replace(/-/g, ' ')}</span>
                          <p class="major-description">{major.description || "No description available."}</p>
                        </div>
                      </div>
                    </a>
                  </li>
                ))}
              </ul>
            ) : (
              <p class="empty-message">No Science majors available.</p>
            )}
          </div>

          <div class="category-section">
            <h2 class="category-title">Art Majors</h2>
            {artMajors.length > 0 ? (
              <ul class="major-list">
                {artMajors.map((major) => (
                  <li class="major-item">
                    <a href={`/majors/${major.slug}`} class="card-link">
                      <div class="card">
                        <div class="major-content">
                          <span class="major-slug">{major.slug.charAt(0).toUpperCase() + major.slug.slice(1).replace(/-/g, ' ')}</span>
                          <p class="major-description">{major.description || "No description available."}</p>
                        </div>
                      </div>
                    </a>
                  </li>
                ))}
              </ul>
            ) : (
              <p class="empty-message">No Art majors available.</p>
            )}
          </div>
        </div>

        {uncategorizedMajors.length > 0 && (
          <div class="category-section">
            <h2 class="category-title">Uncategorized Majors</h2>
            <ul class="major-list">
              {uncategorizedMajors.map((major) => (
                <li class="major-item">
                  <a href={`/majors/${major.slug}`} class="card-link">
                    <div class="card">
                      <div class="major-content">
                        <span class="major-slug">{major.slug.charAt(0).toUpperCase() + major.slug.slice(1).replace(/-/g, ' ')}</span>
                        <p class="major-description">{major.description || "No description available."}</p>
                      </div>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        )}
      </>
    )}
  </section>

  <style>
    .majors-container {
      max-width: 1200px; /* Increased to accommodate side-by-side layout */
      margin: 0 auto;
      padding: 3rem 1rem;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      color: #1a1a1a;
    }

    .main-title {
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 1rem;
      color: #2c3e50;
    }

    .summary {
      text-align: center;
      color: #666;
      font-size: 1.1rem;
      margin-bottom: 3rem;
    }

    .categories-wrapper {
      display: flex;
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .category-section {
      flex: 1; /* Equal width for Science and Art sections */
    }

    .category-title {
      font-size: 1.75rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      color: #2c3e50;
      position: relative;
      display: inline-block;
    }

    .category-title::after {
      content: '';
      width: 50px;
      height: 3px;
      background-color: #1a73e8;
      position: absolute;
      bottom: -8px;
      left: 0;
    }

    .major-list {
      list-style: none;
      padding-left: 0;
      margin: 0;
      display: grid;
      gap: 1rem;
      grid-template-columns: 1fr; /* Single column per category */
    }

    .major-item {
      position: relative;
      padding: 0.5rem 0.5rem 0.5rem 2.5rem;
    }

    .major-item::before {
      content: 'â€¢';
      position: absolute;
      left: 0.75rem;
      top: 1rem;
      font-size: 1.5rem;
      color: #888;
    }

    /* SteveBloX Card Styles */
    .card {
      box-sizing: border-box;
      width: 100%;
      background: rgba(217, 217, 217, 0.58);
      border: 1px solid white;
      box-shadow: 12px 17px 51px rgba(0, 0, 0, 0.22);
      backdrop-filter: blur(6px);
      border-radius: 4px;
      text-align: center;
      cursor: pointer;
      transition: all 0.5s;
      user-select: none;
      font-weight: bolder;
      color: black;
    }

    .card:hover {
      border: 1px solid black;
      transform: scale(1.05);
    }

    .card:active {
      transform: scale(0.95) rotateZ(1.7deg);
    }

    .card-link {
      text-decoration: none;
      color: inherit;
      display: block;
    }

    .major-content {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .major-slug {
      font-size: 1.25rem;
      font-weight: 700;
      color: #2c3e50;
    }

    .major-description {
      font-size: 0.95rem;
      color: #666;
      line-height: 1.5;
      font-weight: normal;
    }

    .empty-message {
      font-size: 1rem;
      color: #666;
      text-align: center;
    }

    /* Tablet and smaller desktop screens */
    @media (max-width: 768px) {
      .main-title {
        font-size: 2rem;
      }

      .category-title {
        font-size: 1.5rem;
      }

      .categories-wrapper {
        flex-direction: column; /* Stack categories vertically */
        gap: 1rem;
      }

      .major-item {
        padding: 0.5rem 0.5rem 0.5rem 2.25rem;
      }

      .major-content {
        padding: 1.25rem;
      }

      .major-slug {
        font-size: 1.125rem;
      }

      .major-description {
        font-size: 0.9rem;
      }

      .major-item::before {
        top: 0.75rem;
        font-size: 0.9rem;
      }
    }

    /* Phone view */
    @media (max-width: 500px) {
      .main-title {
        font-size: 1.75rem;
      }

      .summary {
        font-size: 1rem;
      }

      .category-title {
        font-size: 1.25rem;
      }

      .major-list {
        grid-template-columns: 1fr; /* Single column for simplicity */
        gap: 0.75rem;
      }

      .major-item {
        padding: 0.5rem;
      }

      .major-item::before {
        display: none; /* Remove bullet for cleaner mobile view */
      }

      .card {
       
        width: 280px; /* Fixed width */
        min-height: 200px; /* Fixed minimum height */
        max-width: none; /* Override any max-width */
        margin-inline-start:20px;
      }

      .major-content {
        padding: 1rem;
      }

      .major-slug {
        font-size: 1rem;
      }

      .major-description {
        font-size: 0.85rem;
      }
    }
  </style>
</MainLayout>
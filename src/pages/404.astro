---
import Layout from '../layouts/MainLayout.astro';
---

<Layout title="Page Not Found">
  <main class="container">
    <section class="error-section">
      <h1 class="error-code">404</h1>
      <h2 class="error-title">Oops! Page Not Found</h2>
      <p class="error-message">
        It looks like the page you're looking for doesn't exist or has been moved.
        Let's get you back on track!
      </p>

      <!-- Search Bar -->
  
      <!-- Navigation Links -->
      <div class="navigation-links">
        <a href="/" class="nav-link">Go to Homepage</a>
        <a href="/about" class="nav-link">About Us</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/contact" class="nav-link">Contact Us</a>
      </div>

      <!-- Contact Info -->
      <p class="contact-info">
        Still lost? <a href="/contact">Contact our support team</a> for help.
      </p>

      <!-- Visual Element (Simple CSS Illustration) -->
      <div class="error-graphic"></div>
    </section>
  </main>

  <style>
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #f5f5f5;
    }

    .error-section {
      text-align: center;
      max-width: 600px;
    }

    .error-code {
      font-size: 6rem;
      font-weight: bold;
      color: #2c3e50;
      margin: 0;
    }

    .error-title {
      font-size: 2rem;
      color: #34495e;
      margin: 0.5rem 0;
    }

    .error-message {
      font-size: 1.1rem;
      color: #7f8c8d;
      margin-bottom: 2rem;
    }

    .search-container {
      display: flex;
      justify-content: center;
      margin-bottom: 2rem;
    }

    .search-input {
      padding: 0.75rem;
      font-size: 1rem;
      border: 1px solid #ddd;
      border-radius: 4px 0 0 4px;
      width: 70%;
      max-width: 400px;
    }

    .search-button {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      background-color: #3498db;
      color: white;
      border: none;
      border-radius: 0 4px 4px 0;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .search-button:hover {
      background-color: #2980b9;
    }

    .navigation-links {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
      margin-bottom: 2rem;
    }

    .nav-link {
      padding: 0.5rem 1rem;
      background-color: #ecf0f1;
      color: #2c3e50;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.3s;
    }

    .nav-link:hover {
      background-color: #dfe6e9;
    }

    .contact-info {
      font-size: 1rem;
      color: #7f8c8d;
    }

    .contact-info a {
      color: #3498db;
      text-decoration: none;
    }

    .contact-info a:hover {
      text-decoration: underline;
    }

    .error-graphic {
      width: 200px;
      height: 200px;
      margin: 2rem auto;
      background: radial-gradient(circle, #3498db 20%, transparent 20%),
                  radial-gradient(circle, #3498db 20%, transparent 20%) 50px 50px;
      background-size: 50px 50px;
      opacity: 0.3;
    }

    @media (max-width: 600px) {
      .error-code {
        font-size: 4rem;
      }

      .error-title {
        font-size: 1.5rem;
      }

      .search-input {
        width: 60%;
      }
    }
  </style>


</Layout>